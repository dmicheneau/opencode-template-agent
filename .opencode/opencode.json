{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "sequentialthinking": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--name",
        "opencode-agents-sequential-thinking",
        "-i",
        "--rm",
        "mcp/sequentialthinking"
      ],
      "enabled": true
    },
    "memory": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "-v",
        "opencode-agents-memory:/app/dist",
        "--name",
        "opencode-agents-memory",
        "--rm",
        "mcp/memory"
      ],
      "enabled": true
    },
    "browsermcp": {
      "type": "local",
      "command": [
        "npx",
        "@browsermcp/mcp@latest"
       ],
       "enabled": true
     }
  },
  "permission": {
    "skill": {
      "*": "allow"
    },
    "bash": {
      "*": "ask"
    }
  }
}
